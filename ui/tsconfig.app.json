{
  "extends": ["@vue/tsconfig/tsconfig.dom.json", "../tsconfig.paths.json"],
  "include": ["types", "types/env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": "..",
    "rootDir": ".",
    "outDir": "../dist",
    "paths": {
      "@/*": ["./ui/src/*"]
    },
    "typeRoots": ["types"]
  }
}

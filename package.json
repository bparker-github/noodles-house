{
  "name": "noodles-house",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "/// Build Scripts ///": "/// Scripts below are used for building the app to a bundle ///",
    "build": "npm-run-all -lns build:common -p build:api build:ui",
    "build:api": "npm run build -w api",
    "build:common": "npm run build -w common",
    "build:ui": "npm run build -w ui",
    "/// Development ///": "/// Scripts below make it easy to develop ///",
    "dev": "npm-run-all -lns build:common -p dev:*",
    "dev:common": "npm run dev -w common",
    "dev:api": "npm run start -w api",
    "dev:ui": "npm run dev -w ui"
  },
  "workspaces": [
    "api",
    "common",
    "ui"
  ],
  "author": "Ben Parker (ben@noodles.house)",
  "license": "ISC",
  "devDependencies": {
    "@noodles-house/ui": "^0.0.0",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "prettier-plugin-tailwindcss": "^0.5.6"
  },
  "dependencies": {
    "@vueuse/core": "^10.5.0"
  }
}

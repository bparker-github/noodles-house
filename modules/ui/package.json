{
  "name": "@noodles-house/ui",
  "version": "1.0.0",
  "engines": {
    "node": "^18"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm-run-all -lns build:code build:types",
    "build:code": "vite build",
    "build:types": "vue-tsc --noEmit -p ../../tsconfig.ui.json",
    "preview": "vite preview",
    "test:unit": "vitest",
    "util:format": "prettier --write src/",
    "util:lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore"
  },
  "dependencies": {
    "@azure/msal-browser": "^3.1.0",
    "@headlessui/vue": "^1.7.16",
    "@heroicons/vue": "^2.0.18",
    "@noodles-house/shared": "^1.0.0",
    "@tailwindcss/forms": "^0.5.6",
    "@tailwindcss/typography": "^0.5.10",
    "@vitejs/plugin-vue": "^4.3.4",
    "npm-run-all": "^4.1.5",
    "pinia": "^2.1.6",
    "unsplash-js": "^7.0.18",
    "vite": "^4.4.9",
    "vite-svg-loader": "^4.0.0",
    "vue": "^3.3.4",
    "vue-router": "^4.2.4"
  },
  "devDependencies": {
    "@tsconfig/node18": "^18.2.2",
    "@vue/tsconfig": "^0.4.0",
    "autoprefixer": "^10.4.15",
    "postcss": "^8.4.29",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.2.2",
    "vue-tsc": "^1.8.11"
  }
}

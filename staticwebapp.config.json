{
  "auth": {
    "identityProviders": {
      "azureActiveDirectory": {
        "registration": {
          "openIdIssuer": "https://login.microsoftonline.com/5c3a58ca-ff7d-4f38-aa9e-c76cbde229da/v2.0",
          "clientIdSettingName": "NOOD_AAD_CLIENT_ID",
          "clientSecretSettingName": "NOOD_AAD_CLIENT_SECRET"
        },
        "apple": {
          "registration": {
            "clientIdSettingName": "NOOD_APPLE_CLIENT_ID",
            "clientSecretSettingName": "NOOD_APPLE_CLIENT_SECRET"
          }
        }
      },
      "customOpenIdConnectProviders": {
        "aadb2c": {
          "registration": {
            "clientIdSettingName": "NOOD_AADB2C_CLIENT_ID",
            "clientCredential": {
              "clientSecretSettingName": "NOOD_AADB2C_CLIENT_SECRET"
            },
            "openIdConnectConfiguration": {
              "wellKnownOpenIdConfiguration": "https://noodleshouse.b2clogin.com/noodleshouse.onmicrosoft.com/B2C_1_noodle_susi/v2.0/.well-known/openid-configuration"
            }
          },
          "login": {
            "nameClaimType": "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name",
            "scopes": [],
            "loginParameterNames": []
          }
        }
      }
    }
  },
  "platform": {
    "apiRuntime": "node:18"
  },
  "navigationFallback": {
    "rewrite": "index.html",
    "exclude": ["/images/*.{png,jpg,gif,ico}", "/*.{css,scss,js}", "/.auth/*"]
  },
  "routes": [
    {
      "route": "/logout",
      "rewrite": "/.auth/logout"
    },
    {
      "route": "/login",
      "rewrite": "/.auth/login/aad?post_login_redirect_uri=/home"
    },
    {
      "route": "/.auth/*",
      "allowedRoles": ["anonymous", "authenticated"]
    },
    {
      "route": "/api/*",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/data-api/*",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/*",
      "allowedRoles": ["authenticated"]
    }
  ],
  "globalHeaders": {
    "Access-Control-Allow-Origin": "*",
    "Access-Control-Allow-Methods": "GET"
  },
  "responseOverrides": {
    "401": {
      "statusCode": 302,
      "redirect": "/login"
    }
  }
}

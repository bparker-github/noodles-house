{
  "name": "@noodles-house/api",
  "version": "0.1.0",
  "description": "Basic API functionality for Noodle's House.",
  "main": "dist/src/main.js",
  "type": "commonjs",
  "engines": {
    "node": "^18.0.0"
  },
  "scripts": {
    "build:code": "tsc -b",
    "build:watch": "tsc -b -w",
    "build": "npm-run-all -lns clean build:code",
    "clean": "rimraf dist",
    "start": "npm-run-all -lns build -p watch start:func",
    "start:func": "func start",
    "start:func:https": "func start --useHttps --cert ../https/certificate.crt",
    "watch": "npm-run-all -lns clean build:watch"
  },
  "dependencies": {
    "@azure/functions": "^4.5.0",
    "@noodles-house/db": "file:../swa-db-connections",
    "mssql": "^9.3.2",
    "reflect-metadata": "^0.1.14",
    "typeorm": "^0.3.17",
    "unsplash-js": "^7.0.18"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "dree": "^4.8.5",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.7",
    "typescript": "^5.3.3"
  }
}

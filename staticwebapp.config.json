{
  "auth": {
    "identityProviders": {
      "apple": {
        "registration": {
          "clientIdSettingName": "NOOD_APPLE_CLIENT_ID",
          "clientSecretSettingName": "NOOD_APPLE_CLIENT_SECRET"
        },
        "userDetailsClaim": "email",
        "login": {
          "nameClaimType": "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name",
          "scopes": ["openid", "email", "emails", "name"]
        }
      }
    }
  },
  "platform": {
    "apiRuntime": "node:18"
  },
  "trailingSlash": "auto",
  "routes": [
    {
      "route": "/api/unsplash/*",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/*",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/login",
      "rewrite": "/.auth/login/apple?post_login_redirect_uri=.referrer"
    },
    {
      "route": "/logout",
      "redirect": "/.auth/logout?post_login_redirect_uri=/"
    }
  ],
  "navigationFallback": {
    "rewrite": "index.html",
    "exclude": ["/images/*.{png,jpg,gif,ico}", "/*.{css,scss,js}", "/.auth/*"]
  },
  "globalHeaders": {
    "Access-Control-Allow-Origin": "*",
    "Access-Control-Allow-Methods": "GET"
  }
}

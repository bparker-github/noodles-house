{
  "auth": {
    "identityProviders": {
      "apple": {
        "registration": {
          "clientIdSettingName": "NOOD_APPLE_CLIENT_ID",
          "clientSecretSettingName": "NOOD_APPLE_CLIENT_SECRET"
        },
        "login": {
          "scopes": ["openid", "email", "name"]
        }
      }
    }
  },
  "platform": {
    "apiRuntime": "node:18"
  },
  "trailingSlash": "auto",
  "routes": [
    {
      "route": "/login",
      "rewrite": "/.auth/login/apple?post_login_redirect_url=/home"
    },
    {
      "route": "/logout",
      "redirect": "/.auth/logout"
    },
    {
      "route": "/",
      "allowedRoles": ["anonymous", "authenticated"]
    },
    {
      "route": "/*",
      "allowedRoles": ["authenticated"]
    }
  ],
  "navigationFallback": {
    "rewrite": "index.html",
    "exclude": ["/images/*.{png,jpg,gif,ico}", "/*.{css,scss,js}", "/.auth/*"]
  },
  "globalHeaders": {
    "Access-Control-Allow-Origin": "*",
    "Access-Control-Allow-Methods": "GET"
  }
}

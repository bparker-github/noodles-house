{
  "name": "noodles",
  "version": "0.0.1",
  "description": "The root app for Mr Noodles.",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "run-p dev:app dev:api",
    "dev:app": "vite",
    "dev:api": "npm run start -w src/api",
    "build": "npm run build:swa",
    "build:swa": "run-p type-check build:code:swa",
    "build:local": "run-p type-check build-only",
    "preview": "vite preview",
    "test:unit": "vitest",
    "build-only": "vite build",
    "build:code:swa": "vite build --mode swa",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "update-pr-template": "node ./.github/update_pull_request_template.js"
  },
  "pre-commit": [
    "update-pr-template"
  ],
  "workspaces": [
    "src/api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@azure/msal-browser": "^3.0.2",
    "@headlessui/vue": "^1.7.16",
    "@heroicons/vue": "^2.0.18",
    "dotenv": "^16.3.1",
    "lorem-ipsum": "^2.0.8",
    "pinia": "^2.1.6",
    "unsplash-js": "^7.0.18",
    "vue": "^3.3.4",
    "vue-router": "^4.2.4"
  },
  "devDependencies": {
    "@azure/static-web-apps-cli": "^1.1.4",
    "@faker-js/faker": "^8.0.2",
    "@rushstack/eslint-patch": "^1.3.3",
    "@tailwindcss/forms": "^0.5.5",
    "@tailwindcss/typography": "^0.5.9",
    "@tsconfig/node18": "^18.2.1",
    "@types/jsdom": "^21.1.2",
    "@types/node": "^20.5.4",
    "@vitejs/plugin-vue": "^4.3.3",
    "@vitest/ui": "^0.34.2",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/test-utils": "^2.4.1",
    "@vue/tsconfig": "^0.4.0",
    "autoprefixer": "^10.4.15",
    "eslint": "^8.47.0",
    "eslint-plugin-vue": "^9.17.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.28",
    "pre-commit": "^1.2.2",
    "prettier": "^3.0.2",
    "prettier-plugin-tailwindcss": "^0.5.3",
    "tailwindcss": "^3.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "vite": "^4.4.9",
    "vite-svg-loader": "^4.0.0",
    "vitest": "^0.34.2",
    "vue-tsc": "^1.8.8"
  }
}

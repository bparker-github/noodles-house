{
  "name": "@noodles-house/api",
  "version": "0.1.0",
  "description": "Basic API functionality for Noodle's House.",
  "main": "dist/src/functions/**/*.js",
  "type": "commonjs",
  "engines": {
    "node": "^18.0.0"
  },
  "files": [
    "../swa-db-connections"
  ],
  "scripts": {
    "build:code": "tsc",
    "build:generate": "copyfiles ../swa-db-connections/src/**/* ./src/generated/*",
    "build": "npm-run-all -lns clean build:generate build:code",
    "clean": "rimraf dist src/generated",
    "start": "npm-run-all -lns clean build -p watch start:func",
    "start:func": "func start",
    "start:func:https": "func start --useHttps --cert ../https/certificate.crt",
    "watch": "npm-run-all -lns clean build:generate -p \"tsc -w\""
  },
  "dependencies": {
    "@azure/functions": "^4.0.0",
    "dotenv": "^16.3.1",
    "mssql": "^9.3.2",
    "reflect-metadata": "^0.1.14",
    "typeorm": "^0.3.17",
    "unsplash-js": "^7.0.18"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.7",
    "typescript": "^5.3.3"
  }
}

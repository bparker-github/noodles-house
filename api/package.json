{
  "name": "@noodles-house/api",
  "version": "0.1.0",
  "description": "Basic API functionality for Noodle's House.",
  "main": "dist/src/functions/*.js",
  "engines": {
    "node": "^18"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "clean": "rimraf dist",
    "start": "npm-run-all -lns clean build -p watch start:func",
    "start:func": "func start",
    "start:func:https": "func start --useHttps --cert ../https/certificate.crt",
    "build:local": "cross-env-shell MODE=local npm run build",
    "build:swa": "cross-env-shell MODE=swa npm run build",
    "build:swa-local": "cross-env-shell MODE=swa-local npm run build"
  },
  "dependencies": {
    "@azure/functions": "^4.0.0",
    "unsplash-js": "^7.0.18"
  }
}

{
  "name": "noodles-house",
  "version": "0.0.1",
  "workspaces": [
    "api",
    "ui",
    "ui-next",
    "unsplashjs-react"
  ],
  "engines": {
    "node": "^18.0.0 || ^20.0.0"
  },
  "scripts": {
    "dev:api": "npm run start -w api",
    "dev:ui-next": "npm run dev -w ui-next",
    "swa:start": "swa start --config-name dev",
    "start": "npm-run-all -lnp dev:api dev:ui-next swa:start"
  },
  "devDependencies": {
    "eslint": "^9.5.0",
    "npm-run-all2": "^6.2.0",
    "prettier": "^3.3.2",
    "prettier-plugin-organize-attributes": "^1.0.0",
    "prettier-plugin-tailwindcss": "^0.6.4"
  }
}

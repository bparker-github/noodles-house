{
  "$schema": "https://github.com/Azure/data-api-builder/releases/latest/download/dab.draft.schema.json",

  "data-source": {
    "connection-string": "@env('NOOD_DB_CONNECTION_STRING')",
    "database-type": "mssql",
    "options": {
      "set-session-context": false
    }
  },
  "runtime": {
    "rest": {
      "enabled": true,
      "path": "/da-data"
    },
    "graphql": {
      "enabled": false
    },
    "host": {
      "mode": "production",
      "authentication": {
        "provider": "StaticWebApps"
      },
      "cors": {
        "allow-credentials": false,
        "origins": [
          "http://localhost:9090",
          "http://localhost:9091",
          "http://localhost:4280",
          "https://localhost:4280",
          "https://thankful-pebble-0fd322f0f.3.azurestaticapps.net",
          "https://www.noodles.house",
          "https://noodles.house"
        ]
      }
    }
  },
  "entities": {
    "user-settings": {
      "source": "dbo.UserSettings",
      "permissions": [{ "actions": ["*"], "role": "anonymous" }]
    }
  }
}

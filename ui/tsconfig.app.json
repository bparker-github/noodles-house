{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["types", "types/env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@db/*": ["../swa-db-connections/*"]
    },
    "isolatedModules": false,
    "typeRoots": ["types"]
  },
  "references": [{ "path": "../swa-db-connections" }]
}

{
  "name": "@noodles-house/api",
  "version": "1.0.0",
  "main": "dist/functions/*.js",
  "type": "commonjs",
  "engines": {
    "node": "^18"
  },
  "scripts": {
    "///// CLEAN /////": "//////",
    "clean": "rimraf dist",
    "///// BUILD /////": "//////",
    "build": "npm-run-all -lns clean build:code",
    "build:code": "tsc",
    "build:local": "cross-env-shell MODE=local npm run build",
    "build:swa": "cross-env-shell MODE=swa npm run build",
    "build:swa-local": "cross-env-shell MODE=swa-local npm run build",
    "///// DEVELOPMENT /////": "//////",
    "dev": "npm-run-all -lns build -p dev:code run:func",
    "dev:code": "tsc --watch",
    "run:func": "func start --port 9091"
  },
  "dependencies": {
    "@azure/functions": "^4.0.0-alpha.9",
    "npm-run-all": "^4.1.5",
    "unsplash-js": "^7.0.18"
  },
  "devDependencies": {
    "@tsconfig/node18": "^18.2.2",
    "@types/node": "^18.x",
    "cross-env": "^7.0.3",
    "rimraf": "^5.0.0",
    "typescript": "^5.2.2"
  }
}

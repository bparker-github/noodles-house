{
  "auth": {
    "identityProviders": {
      "apple": {
        "registration": {
          "clientIdSettingName": "NOOD_APPLE_CLIENT_ID",
          "clientSecretSettingName": "NOOD_APPLE_CLIENT_SECRET"
        },
        "login": {
          "scopes": ["openid", "email", "name"]
        }
      }
    }
  },
  "platform": {
    "apiRuntime": "node:18"
  },
  "trailingSlash": "auto",
  "routes": [
    {
      "route": "/indoors*",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api*",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/login",
      "rewrite": "/.auth/login/apple?post_login_redirect_url=/home"
    },
    {
      "route": "/logout",
      "rewrite": "/.auth/logout"
    }
  ],
  "responseOverrides": {
    "401": {
      "rewrite": "/.auth/login/apple?post_login_redirect_url=/home",
      "statusCode": 302
    }
  },
  "navigationFallback": {
    "rewrite": "index.html",
    "exclude": [
      "/images/*.{png,jpg,gif,ico}",
      "/*.{css,scss,js,ts,vue}",
      "/.auth/*",
      "/logout",
      "/login"
    ]
  },
  "globalHeaders": {
    "Access-Control-Allow-Origin": "*",
    "Access-Control-Allow-Methods": "GET",
    "Content-Security-Policy": "default-src https: 'unsafe-eval' 'unsafe-inline'; object-src 'none'"
  },
  "mimeTypes": {
    ".json": "text/json"
  }
}

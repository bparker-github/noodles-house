{
  "$schema": "https://aka.ms/azure/static-web-apps-cli/schema",
  "configurations": {
    "workflow": {
      "appLocation": ".",
      "appBuildCommand": "npm run b:swa:ui",
      "apiLocation": ".",
      "apiBuildCommand": "npm run b:swa:api",
      "outputLocation": "modules/ui/dist"
    },
    "dev": {
      "apiBuildCommand": "npm run build:api --if-present",
      "apiDevserverUrl": "http://localhost:9091",
      "apiLanguage": "node",
      "apiLocation": ".",
      "apiVersion": "18",
      "appBuildCommand": "npm run build:ui",
      "appDevserverUrl": "http://localhost:9090",
      "appLocation": ".",
      "outputLocation": "modules\\ui\\dist",
      "run": "npm run dev"
    },
    "serve": {
      "apiLanguage": "node",
      "apiLocation": "modules\\api",
      "apiVersion": "18",
      "appLocation": "modules\\ui\\dist"
    },
    "api": {
      "apiLanguage": "node",
      "apiVersion": "18",
      "run": "npm run start -w @noodles-house/api",
      "apiDevserverUrl": "http://localhost:9091"
    },
    "attach": {
      "appDevserverUrl": "http://localhost:9090",
      "apiDevserverUrl": "http://localhost:9091"
    }
  }
}

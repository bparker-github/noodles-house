{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["types", "types/env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@nh/shared": ["./src/shared/index.ts"]
    },
    "verbatimModuleSyntax": false,
    "typeRoots": ["types"]
  }
}

{
  "name": "noodles-house",
  "version": "1.0.0",
  "workspaces": [
    "./code/api",
    "./code/modules/blur-hash",
    "./code/modules/common",
    "./code/ui"
  ],
  "engines": {
    "node": "^18"
  },
  "scripts": {
    "///// Cleaning /////": "/////",
    "reset:hard": "npm-run-all -lns clean \"npm i\"",
    "clean": "npm-run-all -lnp clean:dist clean:buildinfo clean:inner_node_modules -s clean:node_modules",
    "clean:node_modules": "rimraf node_modules",
    "clean:inner_node_modules": "rimraf -g code/**/node_modules",
    "clean:dist": "rimraf -g modules/**/dist",
    "clean:buildinfo": "rimraf -g **/*.tsbuildinfo",
    "///// DEVELOPMENT /////": "/////",
    "dev": "npm run dev:ui",
    "dev:all": "npm-run-all -lnp dev:api dev:ui",
    "dev:api": "npm run dev -w @noodles-house/api",
    "dev:ui": "npm run dev -w @noodles-house/ui",
    "///// BUILDING /////": "/////",
    "build:api": "npm run build -w @noodles-house/api",
    "build:ui": "npm run build -w @noodles-house/ui",
    "build:swa:api": "npm run build:swa -w @noodles-house/api",
    "build:swa:ui": "npm run build:swa -w @noodles-house/ui",
    "///// STATIC WEB APP /////": "/////",
    "swa:build": "swa start --config build",
    "swa:build:api": "swa start --config build:api",
    "swa:build:ui": "swa start --config build:ui",
    "swa:serve": "swa start --config-name serve",
    "swa:serve:api": "swa start --config-name serve:api",
    "swa:serve:ui": "swa start --config-name serve:ui",
    "swa:dev": "swa start --config-name dev --run \"npm run dev:all\"",
    "swa:dev:api": "swa start --config-name dev:api",
    "swa:dev:ui": "swa start --config-name dev:ui",
    "///// LIFE CYCLES /////": "/////",
    "update-pr-template": "node ./.github/update_pull_request_template.mjs"
  },
  "pre-commit": [
    "update-pr-template"
  ],
  "devDependencies": {
    "@azure/static-web-apps-cli": "^1.1.4",
    "@rushstack/eslint-patch": "^1.4.0",
    "@tsconfig/node18": "^18.2.2",
    "@types/node": "^20.6.2",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "eslint": "^8.49.0",
    "eslint-plugin-vue": "^9.17.0",
    "npm-run-all": "^4.1.5",
    "pre-commit": "^1.2.2",
    "prettier": "^3.0.3",
    "prettier-plugin-organize-attributes": "^1.0.0",
    "prettier-plugin-tailwindcss": "^0.5.4",
    "rimraf": "^5.0.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@azure/msal-browser": "^3.1.0",
    "lorem-ipsum": "^2.0.8"
  }
}

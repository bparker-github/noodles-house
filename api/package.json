{
  "name": "@noodles-house/api",
  "version": "0.1.0",
  "description": "Basic API functionality for Noodle's House.",
  "main": "dist/src/functions/**/*.js",
  "type": "commonjs",
  "engines": {
    "node": "^18.0.0"
  },
  "files": [
    "../swa-db-connections"
  ],
  "scripts": {
    "prebuild": "npm run build -w ../swa-db-connections",
    "build": "tsc -b",
    "watch": "tsc -b -w",
    "clean": "rimraf dist",
    "start": "npm-run-all -lns clean build -p watch start:func",
    "start:func": "func start",
    "start:func:https": "func start --useHttps --cert ../https/certificate.crt"
  },
  "dependencies": {
    "@azure/functions": "^4.0.0",
    "@noodles-house/db": "file:../swa-db-connections",
    "dotenv": "^16.3.1",
    "mssql": "^9.3.2",
    "reflect-metadata": "^0.1.14",
    "typeorm": "^0.3.17",
    "unsplash-js": "^7.0.18"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  }
}

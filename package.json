{
  "name": "noodles-house",
  "version": "1.0.1",
  "description": "",
  "author": "Ben Parker (ben@noodles.house)",
  "license": "ISC",
  "workspaces": [
    "./api",
    "./database",
    "./ui"
  ],
  "engines": {
    "node": "^18"
  },
  "scripts": {
    "/// Clean Scripts ///": "/// Scripts below are used to clean or reset local environments ///",
    "clean": "npm-run-all -lhs clean:dist clean:modules",
    "clean:dist": "rimraf -g **/dist",
    "clean:modules": "rimraf -g **/node_modules",
    "bootstrap": "npm-run-all -lhs clean:dist clean:modules \"npm i\"",
    "/// Build Scripts ///": "/// Scripts below are used for building the app to a bundle ///",
    "build": "npm-run-all -lns clean:dist build:db build:api build:ui",
    "build:api": "npm run build -w api",
    "build:db": "npm run build -w database",
    "build:ui": "npm run build -w ui",
    "build:swa:local": "npm run build:swa-local -ws --if-present",
    "build:swa:api": "npm run build:swa -w api",
    "build:swa:ui": "npm run build:swa -w ui",
    "/// Development ///": "/// Scripts below make it easy to develop ///",
    "dev": "npm-run-all -lnp dev:*",
    "dev:api": "npm run start -w api",
    "dev:ui": "npm run dev -w ui",
    "//// SWA Commands ////": "/////",
    "dev:swa": "swa start --config-name dev",
    "dev:swa:api": "swa start --config-name dev:api --run \"npm run start -w api\"",
    "dev:swa:ui": "swa start --config-name dev:ui --run \"npm run dev -w ui\"",
    "dev:swa:debug": "swa start --config-name dev:debug",
    "///// LIFE CYCLES /////": "/////",
    "update-pr-template": "node ./.github/update_pull_request_template.mjs"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13",
    "unsplash-js": "^7.0.18"
  },
  "devDependencies": {
    "@types/node": "^20.10.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.49.0",
    "nodemon": "^3.0.2",
    "npm-run-all2": "^6.1.1",
    "pre-commit": "^1.2.2",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "pre-commit": [
    "update-pr-template"
  ]
}

{
  "name": "@noodles-house/api",
  "version": "1.0.0",
  "main": "dist/functions/*.js",
  "engines": {
    "node": "^18"
  },
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc -p ../../tsconfig.api.json",
    "watch": "tsc -w -p ../../tsconfig.api.json",
    "clean": "rimraf dist",
    "prestart": "npm run build",
    "start": "npm-run-all -lnp run:watch run:func",
    "run:func": "func start --port 9091",
    "run:watch": "npm run build -- --watch",
    "test": "echo \"No tests yet...\""
  },
  "dependencies": {
    "@azure/functions": "^4.0.0-alpha.9",
    "npm-run-all": "^4.1.5",
    "unsplash-js": "^7.0.18"
  },
  "devDependencies": {
    "@tsconfig/node18": "^18.2.2",
    "@types/node": "^18.x",
    "rimraf": "^5.0.0",
    "typescript": "^5.2.2"
  }
}

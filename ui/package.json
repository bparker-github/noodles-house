{
  "name": "@noodles-house/ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "npm-run-all -lns build:types build:code",
    "build:swa": "npm-run-all -lns build:types build:code:swa",
    "build:swa-local": "npm-run-all -lns build:types build:code:swa-local",
    "build:code": "vite build",
    "build:code:swa": "vite build --mode swa",
    "build:code:swa-local": "vite build --mode swa-local",
    "build:types": "vue-tsc -p ./tsconfig.app.json --declaration --noEmit",
    "preview": "vite preview",
    "test:unit": "vitest",
    "util:format": "prettier --write src/",
    "util:lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.16",
    "@heroicons/vue": "^2.0.18",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@vueuse/core": "^10.6.1",
    "blurhash": "^2.0.5",
    "lorem-ipsum": "^2.0.8",
    "pinia": "^2.1.7",
    "vite-svg-loader": "^5.1.0",
    "vue": "^3.3.9",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.6.0",
    "@tsconfig/node18": "^18.2.2",
    "@vitejs/plugin-vue": "^4.5.1",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/tsconfig": "^0.4.0",
    "autoprefixer": "^10.4.16",
    "eslint-plugin-vue": "^9.19.2",
    "postcss": "^8.4.32",
    "prettier-plugin-organize-attributes": "^1.0.0",
    "tailwindcss": "^3.3.5",
    "vite": "^5.0.7",
    "vue-tsc": "^1.8.24"
  }
}
